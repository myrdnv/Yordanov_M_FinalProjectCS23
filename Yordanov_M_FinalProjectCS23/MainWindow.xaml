            <Label HorizontalAlignment="Center" VerticalAlignment="Center" Content="Master Code" Foreground="#C2D0D1" FontSize="20" FontFamily="MS Gothic"  />
        </Border>
        <Border Margin="546,240,54.333,141.667" BorderThickness="3" BorderBrush="#EF798A" Background="Transparent" CornerRadius="20"/>
        <Border Margin="298,330,296.667,52" Width="200" Height="40"  Background="#EF798A" CornerRadius="20">
            <Button Background="Transparent" Content="Submit" FontSize="20" FontFamily="MS Gothic" Foreground="#B75D69" BorderBrush ="Transparent" Click="Button_Click"/>
        </Border>
        <Border Margin="298,370,296.667,12" Width="200" Height="40"  Background="Transparent" CornerRadius="20">
            <Button Background="Transparent" Content="Log-In" FontSize="15" FontFamily="MS Gothic" Foreground="#B75D69" BorderBrush ="Transparent" Click="Button_Click_2"/>
        </Border>
        <TextBox x:Name="firstName" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="180" Background="Transparent" BorderBrush="Transparent" FontFamily="MS Gothic" FontSize="20" Text="" Foreground="#B75D69" Margin="310,200,304.667,187" />
        <TextBox x:Name="lastName" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="180" Background="Transparent" BorderBrush="Transparent" FontFamily="MS Gothic" FontSize="20" Text="" Foreground="#B75D69" Margin="310,155,304.667,232" />
        <TextBox x:Name="email" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="180" Background="Transparent" BorderBrush="Transparent" FontFamily="MS Gothic" FontSize="20" Text="" Foreground="#B75D69" Margin="310,245,304.667,142" />
        <PasswordBox x:Name="password" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="180" Background="Transparent" BorderBrush="Transparent" FontFamily="MS Gothic" FontSize="20"  Foreground="#B75D69" Margin="310,290,304.667,97"/>
        <PasswordBox x:Name="masterPass" VerticalAlignment="Center" HorizontalAlignment="Center" Height="35" Width="180" Background="Transparent" BorderBrush="Transparent" FontFamily="MS Gothic" FontSize="20"  Foreground="#B75D69" Margin="560,245,54.667,142" />
